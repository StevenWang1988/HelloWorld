<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="steven.example.mytest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="steven.example.mytest.LoginActivity"
            android:label="@string/login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="steven.example.mytest.InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>
        <activity
            android:name="steven.example.mytest.UserData"
            android:label="@string/title_activity_user_data" >
        </activity>
        <activity
            android:name="steven.example.mytest.MainActivity"
            android:label="@string/userData" >
        </activity>
        <activity
            android:name="steven.example.mytest.FullscreenImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_image"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
